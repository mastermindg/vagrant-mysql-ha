#
# Generated by Chef for <%= node['hostname'] %>
#
# Local modifications will be overwritten.
#
#
#
#---------------------------------------------------------------------
# Global settings
#---------------------------------------------------------------------
global
  log 127.0.0.1   local0
  log 127.0.0.1   local1 notice
  #log loghost    local0 info
  maxconn <%= node['haproxy']['global_max_connections'] %>
  <% if @environment == "test" %>debug<% end %>
  #quiet
  user <%= node['haproxy']['user'] %>
  group <%= node['haproxy']['group'] %>
  daemon
  stats socket <%= node['haproxy']['stats_socket'] %> <%= node['haproxy']['stats_priv'] %>


#---------------------------------------------------------------------
# common defaults that all the 'listen' and 'backend' sections will
# use if not designated in their block
#---------------------------------------------------------------------
defaults
    mode                    <%= node['haproxy']['default_mode'] %>
    log                     global
    retries                 <%= node['haproxy']['default_retries'] %>
    option                  httplog
    option                  dontlognull
    option                  redispatch
    balance                 roundrobin
    timeout connect         <%= node['haproxy']['timeout']['connect'] %>
    timeout client          <%= node['haproxy']['timeout']['client'] %>
    timeout server          <%= node['haproxy']['timeout']['server'] %>

#---------------------------------------------------------------------
# setup listeners here
#---------------------------------------------------------------------
listen mysql
  bind 0.0.0.0:<%= node['haproxy']['listen_port'] %>
  mode <%= node['haproxy']['listen_mode'] %>
  <% node['haproxy']['listen_options'].each do |n| %>
  option <%= n %>
  <% end %>
  <% if node['haproxy']['role'] == "MASTER" %>
  server <%= node['hostname'] %> <%= node['ipaddress'] %>:<%= node['mysql']['port'] %> weight 1 maxconn 100 check
  <% end %>
  <% if node['haproxy'].attribute?('server') %>
  server <%= node['haproxy']['server']['backup']['hostname'] %> <%= node['haproxy']['server']['backup']['ipaddress'] %>:<%= node['mysql']['port'] %> weight 1 maxconn 100 check backup
  <% end -%>  

<% if node['haproxy']['default_mode'] == "http" -%>
listen admin
  bind 0.0.0.0:22002
  mode http
  stats uri /
<% end -%>  